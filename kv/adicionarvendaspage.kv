<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
       # selecionar clientes
        Label:
            pos_hint: {"right":1, "top": 1}
            size_hint: 1, 0.5
            text: "Selecione o cliente, produto e unidade"
            bold: True
            id: label_selecione_cliente
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x:None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
                spacing: 1,1
        # selecionar produto com
        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x:None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
                spacing: 1,1

        # texto da data
        Label:
            pos_hint: {"right":1, "top": 0.75}
            size_hint: 1, 0.5
            text: "Data: "
            id: label_data
            bold: True
        #selecionar a unidade
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            LabelButton:
                text: "kg"
                id: unidades_kg
                on_release: app.selecionar_unidade("unidades_kg")
            LabelButton:
                text: "unidades"
                id: unidades_unidades
                on_release: app.selecionar_unidade("unidades_unidades")
            LabelButton:
                text: "litros"
                id: unidades_litros
                on_release: app.selecionar_unidade("unidades_litros")

        # botões
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.mudar_tela("homepage")
            text: "Cancelar"
            pos_hint: {"right":0.45, "top": 0.2}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.adicionar_venda()
            text: "Adicionar Vendas"
            pos_hint: {"right":0.95, "top": 0.2}
            size_hint: 0.4, 0.2
        #preço total
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                text: "Preço Total (R$)"
                id: label_preco
            TextInput:
                id: preco_total
                hint_text: "Digite apenas numeros"
        #quantidade
        GridLayout:
            rows: 1
            pos_hint: {"right":0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                text: "Quantidade Total (R$)"
                id: label_quantidade
            TextInput:
                id: quantidade
                hint_text: "0"
